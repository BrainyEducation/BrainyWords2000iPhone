<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout android:layout_height="300dp"
        android:layout_width="80dp">

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:background="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/interiors"
            android:layout_alignLeft="@+id/interiors"
            android:layout_alignStart="@+id/interiors"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:tag="@string/interiors"
            android:background="@drawable/home"
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

        <Button
            android:id="@+id/fact"
            android:onClick="playSound"
            android:tag="Animals/zoo/zoo_interiors/03_water.mp3"
            android:background="@drawable/fact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="350dp">

    <ImageView
        android:background="@drawable/water"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="300dp"
        android:layout_width="350dp" />


        <Button
            android:background="@null"
            android:onClick="playSound"
            android:tag="Animals/zoo/voices/dolphin.mp3"
            android:id="@+id/dolphin"
            android:layout_width="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/seal"
            android:layout_alignStart="@+id/seal"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_height="80dp" />

        <Button
            android:background="@null"
            android:onClick="playSound"
            android:tag="Animals/zoo/voices/shark.mp3"
            android:id="@+id/shark"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/dolphin"
            android:layout_alignEnd="@+id/dolphin"
            android:layout_width="120dp" />

        <Button
            android:background="@null"
            android:onClick="playSound"
            android:tag="Animals/zoo/voices/squid.mp3"
            android:id="@+id/squid"
            android:layout_width="120dp"
            android:layout_above="@+id/seal"
            android:layout_alignLeft="@+id/seal"
            android:layout_alignStart="@+id/seal"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_height="200dp" />

        <Button
            android:background="@null"
            android:onClick="playSound"
            android:tag="Animals/zoo/voices/seal.mp3"
            android:id="@+id/seal"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/dolphin_1.mp3"
            android:id="@+id/dolphin_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/dolphin"
            android:layout_toLeftOf="@+id/shark"
            android:layout_toStartOf="@+id/shark" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/dolphin_2.mp3"
            android:id="@+id/dolphin_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/dolphin"
            android:layout_toRightOf="@+id/dolphin_1"
            android:layout_toEndOf="@+id/dolphin_1"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/dolphin_3.mp3"
            android:id="@+id/dolphin_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_below="@+id/dolphin"
            android:layout_toRightOf="@+id/dolphin_2"
            android:layout_toEndOf="@+id/dolphin_2" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/shark_1.mp3"
            android:id="@+id/shark_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/shark"
            android:layout_toRightOf="@+id/seal"
            android:layout_toEndOf="@+id/seal" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/shark_2.mp3"
            android:id="@+id/shark_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/shark_1"
            android:layout_toRightOf="@+id/dolphin_2"
            android:layout_toEndOf="@+id/dolphin_2"
            android:layout_marginTop="0dp" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/shark_3.mp3"
            android:id="@+id/shark_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/shark_2"
            android:layout_toRightOf="@+id/dolphin_3"
            android:layout_toEndOf="@+id/dolphin_3"
            android:layout_marginTop="0dp" />


        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/squid_1.mp3"
            android:id="@+id/squid_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/seal"
            android:layout_alignStart="@+id/seal" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/squid_2.mp3"
            android:id="@+id/squid_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/dolphin_2"
            android:layout_alignLeft="@+id/squid_1"
            android:layout_alignStart="@+id/squid_1" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/squid_3.mp3"
            android:id="@+id/squid_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/dolphin_1"
            android:layout_alignLeft="@+id/seal"
            android:layout_alignStart="@+id/seal" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/seal_1.mp3"
            android:id="@+id/seal_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/shark_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/seal_2.mp3"
            android:id="@+id/seal_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/shark_1"
            android:layout_alignBottom="@+id/shark_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/seal_3.mp3"
            android:id="@+id/seal_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/shark_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    </LinearLayout>
