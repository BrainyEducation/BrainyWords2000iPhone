<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="300dp">

        <ImageView
            android:background="@drawable/interior_tools"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="600dp"
            android:layout_height="600dp" />
    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/mall_gear"
        android:id="@+id/tools_cat1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="170dp"
        android:layout_width="290dp" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/rock_dirt"
        android:id="@+id/tools_cat4"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="290dp" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/metal"
        android:id="@+id/tools_cat2"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tools_cat1"
        android:layout_toEndOf="@+id/tools_cat1"
        android:layout_width="290dp" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/woodworking"
        android:id="@+id/tools_cat3"
        android:layout_height="170dp"
        android:layout_below="@+id/tools_cat1"
        android:layout_toRightOf="@+id/tools_cat1"
        android:layout_toEndOf="@+id/tools_cat1"
        android:layout_width="290dp" />



</RelativeLayout>

    </LinearLayout>
