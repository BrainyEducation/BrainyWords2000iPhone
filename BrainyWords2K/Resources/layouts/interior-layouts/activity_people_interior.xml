<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="600dp">

        <ImageView
            android:background="@drawable/interior_people"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="600dp"
            android:layout_height="600dp" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/people_boys"
        android:id="@+id/groceries_cat1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="170dp"
        android:layout_width="190dp" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/women"
        android:id="@+id/groceries_cat4"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="190dp" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/family"
        android:id="@+id/groceries_cat2"
        android:layout_height="170dp"
        android:layout_width="190dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/groceries_cat1"
        android:layout_toEndOf="@+id/groceries_cat1" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/people_girls"
        android:id="@+id/groceries_cat3"
        android:layout_height="170dp"
        android:layout_width="190dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/groceries_cat2"
        android:layout_toEndOf="@+id/groceries_cat2" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/special"
        android:id="@+id/groceries_cat5"
        android:layout_height="170dp"
        android:layout_width="190dp"
        android:layout_below="@+id/groceries_cat1"
        android:layout_toRightOf="@+id/groceries_cat1"
        android:layout_toEndOf="@+id/groceries_cat1" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/men"
        android:id="@+id/groceries_cat6"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_below="@+id/groceries_cat3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>
    </LinearLayout>
