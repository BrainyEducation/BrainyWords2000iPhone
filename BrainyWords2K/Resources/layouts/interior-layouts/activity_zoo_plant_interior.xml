<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout android:layout_height="300dp"
        android:layout_width="80dp">

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:background="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/interiors"
            android:layout_alignLeft="@+id/interiors"
            android:layout_alignStart="@+id/interiors"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:tag="@string/interiors"
            android:background="@drawable/home"
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

        <Button
            android:id="@+id/fact"
            android:onClick="playSound"
            android:tag="Animals/zoo/zoo_interiors/01_plant.mp3"
            android:background="@drawable/fact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="350dp">

    <ImageView
        android:background="@drawable/plant"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="300dp"
        android:layout_width="350dp" />


        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/voices/giraffe.mp3"
            android:id="@+id/giraffe"
            android:layout_width="100dp"
            android:layout_height="280dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/voices/hippo.mp3"
            android:id="@+id/hippo"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/voices/kangaroo.mp3"
            android:id="@+id/kangaroo"
            android:layout_height="160dp"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/hippo"
            android:layout_alignStart="@+id/hippo"
            android:layout_marginBottom="15dp"
            android:layout_width="130dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/voices/panda.mp3"
            android:id="@+id/panda"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginTop="24dp"
            android:layout_alignTop="@+id/giraffe"
            android:layout_toRightOf="@+id/hippo"
            android:layout_toEndOf="@+id/hippo"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/giraffe_1.mp3"
            android:id="@+id/giraffe_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/panda"
            android:layout_toLeftOf="@+id/giraffe"
            android:layout_toStartOf="@+id/giraffe" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/giraffe_2.mp3"
            android:id="@+id/giraffe_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/giraffe_1"
            android:layout_alignLeft="@+id/giraffe_1"
            android:layout_alignStart="@+id/giraffe_1"
            android:layout_marginTop="12dp" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/giraffe_3.mp3"
            android:id="@+id/giraffe_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/giraffe_2"
            android:layout_alignLeft="@+id/giraffe_2"
            android:layout_alignStart="@+id/giraffe_2"
            android:layout_marginTop="11dp" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/hippo_1.mp3"
            android:id="@+id/hippo_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/hippo"
            android:layout_toEndOf="@+id/hippo" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/hippo_2.mp3"
            android:id="@+id/hippo_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/panda"
            android:layout_toRightOf="@+id/hippo"
            android:layout_toEndOf="@+id/hippo"
            android:layout_marginTop="-10dp" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/hippo_3.mp3"
            android:id="@+id/hippo_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/kangaroo"
            android:layout_toRightOf="@+id/hippo"
            android:layout_toEndOf="@+id/hippo"
            android:layout_marginBottom="30dp" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/kangaroo_1.mp3"
            android:id="@+id/kangaroo_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/giraffe"
            android:layout_alignBottom="@+id/giraffe"
            android:layout_alignLeft="@+id/hippo"
            android:layout_alignStart="@+id/hippo" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/kangaroo_2.mp3"
            android:id="@+id/kangaroo_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/giraffe_2"
            android:layout_alignLeft="@+id/kangaroo_1"
            android:layout_alignStart="@+id/kangaroo_1" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/kangaroo_3.mp3"
            android:id="@+id/kangaroo_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/giraffe_3"
            android:layout_alignLeft="@+id/kangaroo_2"
            android:layout_alignStart="@+id/kangaroo_2" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/panda_1.mp3"
            android:id="@+id/panda_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/giraffe"
            android:layout_toRightOf="@+id/panda"
            android:layout_toEndOf="@+id/panda" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/panda_2.mp3"
            android:id="@+id/panda_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/hippo_3"
            android:layout_alignBottom="@+id/hippo_3"
            android:layout_toRightOf="@+id/panda"
            android:layout_toEndOf="@+id/panda" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/panda_3.mp3"
            android:id="@+id/panda_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/kangaroo"
            android:layout_toRightOf="@+id/panda"
            android:layout_toEndOf="@+id/panda" />

    </RelativeLayout>

    </LinearLayout>
