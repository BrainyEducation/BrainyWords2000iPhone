<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout android:layout_height="300dp"
        android:layout_width="80dp">

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:background="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/interiors"
            android:layout_alignLeft="@+id/interiors"
            android:layout_alignStart="@+id/interiors"
            android:layout_centerHorizontal="true"/>

        <ImageButton
                android:id="@+id/back"
                android:onClick="goBack"
                android:tag="@string/interiors"
                android:background="@drawable/home"
                android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

        <Button
            android:id="@+id/fact"
            android:onClick="playSound"
            android:tag="Animals/zoo/zoo_interiors/02_birds.mp3"
            android:background="@drawable/fact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="350dp">

    <ImageView
        android:background="@drawable/birds"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="300dp"
        android:layout_width="350dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/voices/ostrich.mp3"
            android:id="@+id/ostrich"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="180dp" />


        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/voices/parrot.mp3"
            android:id="@+id/parrot"
            android:layout_width="80dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/flamingo"
            android:layout_toEndOf="@+id/flamingo"
            android:layout_marginBottom="10dp"
            android:layout_height="250dp" />

        <Button
        android:onClick="playSound"
        android:background="@null"
        android:tag="Animals/zoo/voices/flamingo.mp3"
        android:id="@+id/flamingo"
        android:layout_height="170dp"
            android:layout_width="80dp"
            android:layout_alignBottom="@+id/parrot"
            android:layout_toLeftOf="@+id/ostrich"
            android:layout_toStartOf="@+id/ostrich" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/voices/owl.mp3"
            android:id="@+id/owl"
            android:layout_height="170dp"
            android:layout_width="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/ostrich_1.mp3"
            android:id="@+id/ostrich_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/flamingo"
            android:layout_toRightOf="@+id/owl"
            android:layout_toEndOf="@+id/owl"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="36dp" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/ostrich_2.mp3"
            android:id="@+id/ostrich_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ostrich"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-11dp" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/ostrich_3.mp3"
            android:id="@+id/ostrich_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ostrich"
            android:layout_toRightOf="@+id/ostrich_2"
            android:layout_toEndOf="@+id/ostrich_2"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="-12dp" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/parrot_1.mp3"
            android:id="@+id/parrot_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/parrot"
            android:layout_toRightOf="@+id/ostrich_3"
            android:layout_toEndOf="@+id/ostrich_3" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/parrot_2.mp3"
            android:id="@+id/parrot_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/parrot"
            android:layout_toRightOf="@+id/parrot_1"
            android:layout_toEndOf="@+id/parrot_1"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/parrot_3.mp3"
            android:id="@+id/parrot_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/parrot"
            android:layout_alignRight="@+id/parrot"
            android:layout_alignEnd="@+id/parrot" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/flamingo_1.mp3"
            android:id="@+id/flamingo_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/flamingo"
            android:layout_toLeftOf="@+id/flamingo"
            android:layout_toStartOf="@+id/flamingo"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/flamingo_2.mp3"
            android:id="@+id/flamingo_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/flamingo"
            android:layout_alignLeft="@+id/flamingo"
            android:layout_alignStart="@+id/flamingo" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/flamingo_3.mp3"
            android:id="@+id/flamingo_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/flamingo"
            android:layout_toRightOf="@+id/flamingo_2"
            android:layout_toEndOf="@+id/flamingo_2"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <Button
            android:onClick="playSound"
            android:background="#f7fdc3"
            android:text="1"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/owl_1.mp3"
            android:id="@+id/owl_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/parrot"
            android:layout_alignBottom="@+id/parrot"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:onClick="playSound"
            android:background="#d1f1fd"
            android:text="2"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/owl_2.mp3"
            android:id="@+id/owl_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/owl"
            android:layout_toLeftOf="@+id/flamingo"
            android:layout_toStartOf="@+id/flamingo"
            android:layout_marginBottom="4dp" />

        <Button
            android:onClick="playSound"
            android:background="#ffda81"
            android:text="3"
            android:textColor="#000"
            android:tag="Animals/zoo/facts/sounds/owl_3.mp3"
            android:id="@+id/owl_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/owl"
            android:layout_toRightOf="@+id/owl_2"
            android:layout_toEndOf="@+id/owl_2"
            android:layout_margin="5dp" />


    </RelativeLayout>


    </LinearLayout>
