<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="300dp">

    <ImageView
        android:background="@drawable/interior_medical_center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="600dp"
        android:layout_height="600dp" />

        <Button
            android:id="@+id/psychologist"
            android:layout_width="146dp"
            android:layout_height="152dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:onClick="openCategoryAlt"
            android:tag="@string/psychologist" />

        <Button
            android:id="@+id/feelings"
            android:layout_width="152dp"
            android:layout_height="154dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/psychologist"
            android:layout_toRightOf="@id/psychologist"
            android:background="@null"
            android:onClick="openCategory"
            android:tag="@string/psychologist" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/nurse"
        android:id="@+id/clothes_cat4"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="290dp" />

    <Button
        android:onClick="openCategory"
        android:background="@null"
        android:tag="@string/health_equipment"
        android:id="@+id/clothes_cat2"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/feelings"
        android:layout_toEndOf="@+id/feelings"
        android:layout_width="290dp" />

    <Button
        android:onClick="openInterior"
        android:background="@null"
        android:tag="pediatrician"
        android:id="@+id/clothes_cat3"
        android:layout_height="170dp"
        android:layout_below="@+id/feelings"
        android:layout_toRightOf="@+id/feelings"
        android:layout_toEndOf="@+id/feelings"
        android:layout_width="290dp" />

</RelativeLayout>

    </LinearLayout>
