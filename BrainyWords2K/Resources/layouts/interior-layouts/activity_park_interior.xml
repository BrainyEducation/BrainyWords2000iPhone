<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/interior_park" />

        <Button
            android:id="@+id/vehicle_cat1"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:onClick="openCategory"
            android:tag="@string/birds" />

        <Button
            android:id="@+id/vehicle_cat2"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/vehicle_cat1"
            android:layout_toRightOf="@+id/vehicle_cat1"
            android:background="@null"
            android:onClick="openCategory"
            android:tag="@string/landscape" />

        <Button
            android:id="@+id/vehicle_cat3"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/vehicle_cat2"
            android:layout_toRightOf="@+id/vehicle_cat2"
            android:background="@null"
            android:onClick="openCategory"
            android:tag="@string/bugs" />

        <Button
            android:id="@+id/vehicle_cat4"
            android:layout_width="290dp"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:onClick="openCategory"
            android:tag="@string/equipment" />

        <Button
            android:id="@+id/vehicle_cat5"
            android:layout_width="290dp"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/vehicle_cat4"
            android:layout_toRightOf="@+id/vehicle_cat4"
            android:background="@null"
            android:onClick="openCategory"
            android:tag="@string/park_creatures" />


    </RelativeLayout>

</LinearLayout>