<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="300dp">

        <ImageView
            android:background="@drawable/interior_zoo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="600dp"
            android:layout_height="600dp" />

        <Button
            android:onClick="openInterior"
            android:tag="zoowater"
            android:background="@null"
            android:id="@+id/water"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/reptiles"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="90dp"
            android:layout_width="160dp" />

        <Button
            android:onClick="openInterior"
            android:tag="zoodinosaur"
            android:background="@null"
            android:id="@+id/dinosaur"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/reptiles"
            android:layout_alignEnd="@+id/reptiles"
            android:layout_marginRight="100dp"/>

        <Button
            android:onClick="openInterior"
            android:tag="zoomeat"
            android:background="@null"
            android:id="@+id/meat"
            android:layout_marginRight="95dp"
            android:layout_marginEnd="95dp"
            android:layout_width="80dp"
            android:layout_marginTop="13dp"
            android:layout_height="80dp"
            android:layout_below="@+id/dinosaur"
            android:layout_alignRight="@+id/birds"
            android:layout_alignEnd="@+id/birds" />

        <Button
            android:onClick="openInterior"
            android:tag="zooreptiles"
            android:background="@null"
            android:id="@+id/reptiles"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@+id/birds"
            android:layout_toRightOf="@+id/zoo"
            android:layout_toEndOf="@+id/zoo"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />

        <Button
            android:onClick="openInterior"
            android:tag="zooplant"
            android:background="@null"
            android:id="@+id/plant"
            android:layout_height="50dp"
            android:layout_width="110dp"
            android:layout_below="@+id/dinosaur"
            android:layout_toLeftOf="@+id/water"
            android:layout_toStartOf="@+id/water" />

        <Button
            android:onClick="openInterior"
            android:tag="zoomonkeys"
            android:background="@null"
            android:id="@+id/monkeys1"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/water"
            android:layout_alignRight="@+id/meat"
            android:layout_alignEnd="@+id/meat"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" />

        <Button
            android:background="@null"
            android:onClick="openInterior"
            android:tag="zoobirds"
            android:id="@+id/birds"
            android:layout_width="140dp"
            android:layout_marginRight="51dp"
            android:layout_marginEnd="51dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/plant"
            android:layout_alignEnd="@+id/plant" />

        <Button
            android:onClick="openInterior"
            android:tag="zoomonkeys"
            android:background="@null"
            android:id="@+id/monkeys"
            android:layout_height="150dp"
            android:layout_width="90dp"
            android:layout_below="@+id/birds"
            android:layout_toLeftOf="@+id/monkeys1"
            android:layout_toStartOf="@+id/monkeys1" />

        <Button
            android:onClick="openCategory"
            android:tag="Animals/zoo/animals"
            android:background="@null"
            android:id="@+id/zoo"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/plant"
            android:layout_alignEnd="@+id/plant"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />


    </RelativeLayout>

    </LinearLayout>
