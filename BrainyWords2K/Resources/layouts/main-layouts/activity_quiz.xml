<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="120dp">

        <ImageView
            android:id="@+id/coin1"
            android:src="@drawable/gcoin"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/coin4"
            android:layout_width="60dp"
            android:src="@drawable/gcoin"
            android:layout_below="@+id/coin5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/coin3"
            android:layout_width="60dp"
            android:src="@drawable/gcoin"
            android:layout_below="@+id/coin4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/coin2"
            android:layout_width="60dp"
            android:src="@drawable/gcoin"
            android:layout_below="@+id/coin1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/coin5"
            android:layout_width="60dp"
            android:src="@drawable/gcoin"
            android:layout_below="@+id/coin2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/scoin1"
            android:src="@drawable/scoin"
            android:layout_below="@+id/coin4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <ImageView
            android:id="@+id/bag1"
            android:src="@drawable/bag"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/bag3"
            android:layout_width="60dp"
            android:src="@drawable/bag"
            android:visibility="invisible"
            android:layout_height="60dp"
            android:layout_below="@+id/coin4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/bag2"
            android:layout_width="60dp"
            android:src="@drawable/bag"
            android:visibility="invisible"
            android:layout_height="60dp"
            android:layout_below="@+id/coin1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/scoin2"
            android:src="@drawable/scoin"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/coin4"
            android:layout_toRightOf="@+id/coin3"
            android:layout_toEndOf="@+id/coin3" />

        <ImageView
            android:id="@+id/bag4"
            android:layout_width="60dp"
            android:src="@drawable/bag"
            android:visibility="invisible"
            android:layout_height="60dp"
            android:layout_above="@+id/bag3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/bag5"
            android:layout_width="60dp"
            android:src="@drawable/bag"
            android:visibility="invisible"
            android:layout_height="60dp"
            android:layout_below="@+id/bag2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:background="@drawable/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/repeat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/back"
            android:layout_toRightOf="@id/back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/repeat"
            android:onClick="repeatQuestion" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="match_parent"
        android:layout_width="235dp">

        <ImageView
            android:id="@+id/choice1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@null"
            android:onClick="checkAnswer"
            android:scaleType="fitXY"
            android:tag="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp" />

        <ImageView
            android:id="@+id/choice4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@null"
            android:onClick="checkAnswer"
            android:scaleType="fitXY"
            android:tag="4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="21dp" />

    </RelativeLayout>

    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="235dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question"
            android:textSize="13sp"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/choice2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="checkAnswer"
            android:scaleType="fitXY"
            android:tag="2"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="39dp" />

        <ImageView
            android:id="@+id/choice3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="checkAnswer"
            android:scaleType="fitXY"
            android:tag="3"
            android:layout_marginBottom="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/choice2"
            android:layout_alignStart="@+id/choice2" />


    </RelativeLayout>


</LinearLayout>
